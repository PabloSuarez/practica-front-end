@import "nib"

borde_gris = #ccc
borde_gris_claro = #eee
blanco = #fff
gris = nav_bgc

// vars de colores
html_bgc = #4DB1F8

nav_bgc = #4FA8F8
nav_color = #fff
nav_color_border = #8BCAFF

aside_color_border = #0E9BFF

content_color_background = #3296DE
content_color_title = #A8A8A8
content_color_content = #BCDDFA

borde_lista = #7CA4E7

// medidas

margen = 2%
margen_nav = 1%
margen_lista = 2%
margen_medio = 1vw

border_radius = 4px

mobile = 420px
tablet = 1050px
tablet_medio_inferior = 800px

html
	background: blanco
	font-size: 16px
@media (min-width: 0px) and (max-width:mobile)
	html
		font-size: 12px
@media (min-width: mobile+1) and (max-width:tablet)
	html
		font-size: 14px

/*
 * definicion de LIENZO
 */
html
	background-color: html_bgc

.lienzo
	width: 90vw
	margin: 0 auto
	@media (min-width: 0px) and (max-width:mobile)
		&
			width: 98vw
	@media (min-width: mobile+1) and (max-width:tablet)
		&
			width: 90vw

/*
 * FLEX
 */
.flex_container
	display: flex
	flex-wrap: wrap
	justify-content: space-around
	&-flex-start
		justify-content: flex-start
	&-flex-center
		justify-content: center
	@media (min-width: 0px) and (max-width:tablet_medio_inferior)
		&
			flex-direction: column
/* 
 * HEAD
 */
.actions
	background-color: nav_bgc
	border-bottom: 1px solid nav_color_border

.menu
	list-style: none
	margin: 0
	padding: 0
	color: nav_color
	justify-content: space-around
	flex-direction: row
	@media (min-width: mobile+1) and (max-width:tablet)
		&
			display: flex !important
		&_mobile
			display: none !important
	@media (min-width: tablet+1)
		&
			display: flex !important
		&_mobile
			display: none !important

	&.active
		background-color: nav_color
		color: nav_bgc
	@media (min-width: 0px) and (max-width:mobile)
		&
			flex-direction: column
			align-items: flex-start
			font-size: 1.5rem
			margin: 0 -2% 0 -2%
	@media (min-width: mobile+1) and (max-width:tablet)
		&
			display: flex
	&_item
		padding: margen_nav
		text-transform: uppercase 
		&:hover
			color: #A2D9FF
			transform: scaleX(1.01)
		&-left
			text-align: start !important
			padding: 1rem 0 1rem 4% !important
		@media (min-width: 0px) and (max-width:mobile)
			&
				font-weight: bold
				margin: 0
				padding: 1rem 0 1rem 0
				border-bottom: solid 1px
				border-top: 0
				text-align: center
			&:hover
				background-color: nav_color
				color: nav_bgc

/*
 * PERFIL
 */
 margen_aside =  margen_medio margen_medio margen_medio 0
.aside
	text-align: center
	margin: margen_medio
	&_title
		color: nav_color
	&_img_profile
		border-radius: border_radius
		max-width: 100%
	&_border
		margin: margen_aside
		border-top: 1px solid aside_color_border
	&_username
		margin: margen_aside
	&_social_link
		margin: margen_aside
		text-decoration: none
		color: nav_color
	@media (min-width: 0px) and (max-width:mobile)
		&_info
			margin: margen_medio 0 margen_medio 0
			padding: 0 margen_medio 0 margen_medio
			display: flex
			flex-direction: row
			justify-content: space-around
			background-color: nav_bgc
			border: 1px solid aside_color_border
			border-radius: border_radius

/*
 * gen√©ricos
 */
ul
	margin: 0
	padding: 0
	list-style: none
li
	margin: 0
	padding: 0

.no_style_link
	text-decoration: none

.hidden
	display: none

.mobile_only, .tablet_only
	display: none

@media (min-width: 0px) and (max-width:mobile)
	.mobile_only
		display: block
	.mobile_no
		display: none

.clickable
	cursor: pointer

.section_content
	margin: margen_medio
	background-color: content_color_background
	padding: 0 margen_medio 0 margen_medio
	color: content_color_content
	@media (min-width: tablet_medio_inferior +1) and (max-width: tablet)
		&
			max-width: 55vw
	& header
		color: content_color_title

.map
	&.lienzo
		@media (min-width: tablet+1)
			&
				width: 60vw
	&_main
		height: 300px
		padding: 0 0 1% 0
		position: static
		@media (min-width: tablet_medio_inferior +1) and (max-width: tablet)
			&
				max-width: 55vw
		@media (min-width: mobile +1) and (max-width: tablet_medio_inferior)
			&
				max-width: 86vw
		@media (min-width: 0) and (max-width: mobile)
			&
				max-width: 94vw
	&_container
		height: 100%
